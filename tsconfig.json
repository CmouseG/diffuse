{
    "extends": "./node_modules/electron-webpack/tsconfig-base.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "*": [ "node_modules/@types/*", "*"],
            "@/*": [
                "src/renderer/*"
            ]
        },
        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": false   
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ],
}